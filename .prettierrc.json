{
  "bracketSameLine": false,
  "trailingComma": "all",
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "overrides": [
    {
      "files": [
        "*.html",
        "*.css"
      ],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": [
        "*.sql"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "plugins": [
    "prettier-plugin-pkg",
    "prettier-plugin-sh"
  ]
}
